<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MotorActivity" >
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp" >
        
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:text="فحص قياس الزيت"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/radioGroup1"
        android:text="فحص جوده الزيت"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/TextView01"
        android:layout_below="@+id/RadioGroup01"
        android:text="فحص قياس الماء"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/RadioGroup02"
        android:text="فحص مروحه التبريد"
        android:textSize="15sp" />

    <RadioGroup
        android:id="@+id/RadioGroup03"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/RadioGroup02"
        android:layout_alignTop="@+id/TextView03" >

        <RadioButton
            android:id="@+id/RadioButton09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="تعمل"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/RadioButton07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لا تعمل"
            android:textSize="15sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/TextView03"
        android:layout_below="@+id/RadioGroup03"
        android:text="فحص المحرك"
        android:textSize="15sp" />

    <RadioGroup
        android:id="@+id/RadioGroup01"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/radioGroup1"
        android:layout_alignTop="@+id/TextView01" >

        <RadioButton
            android:id="@+id/RadioButton02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="جيد"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/RadioButton01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="غير جيد"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/RadioButton03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="محترق"
            android:textSize="15sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/RadioGroup04"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/RadioGroup03"
        android:layout_below="@+id/RadioGroup03" >

        <RadioButton
            android:id="@+id/RadioButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="جيد"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/RadioButton08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="غير جيد"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/RadioButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لا يعمل"
            android:textSize="15sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/RadioGroup02"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/RadioGroup01"
        android:layout_alignTop="@+id/TextView02" >

        <RadioButton
            android:id="@+id/RadioButton06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="كامل"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/RadioButton04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="غير كامل"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/RadioButton05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="يوجد تسريب"
            android:textSize="15sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/RadioGroup04"
        android:text="فحص السيور"
        android:textSize="15sp" />

    <RadioGroup
        android:id="@+id/RadioGroup05"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/RadioGroup04"
        android:layout_below="@+id/RadioGroup04" >

        <RadioButton
            android:id="@+id/RadioButton14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="جيد"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/RadioButton12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مستهلكة"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/RadioButton13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مقطوعة"
            android:textSize="15sp" />
    </RadioGroup>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RadioGroup05"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="صورة المحرك" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="24dp" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="كامل"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="غير كامل"
            android:textSize="15sp" />
    </RadioGroup>

  </RelativeLayout>

</ScrollView>
